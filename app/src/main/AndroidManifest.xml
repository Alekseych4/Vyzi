<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.abityrienty.vyzi">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/favicon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".List_of_Vyzi_activity"
            android:label="@string/title_activity_list_of__vyzi_activity"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ru.abityrienty.vyzi.MainActivity" />
        </activity>
        <activity
            android:name=".Add_comment_activity"
            android:label="@string/title_activity_add_comment_activity"
            android:parentActivityName=".List_of_Vyzi_activity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ru.abityrienty.vyzi.List_of_Vyzi_activity" />
        </activity>
        <activity
            android:name=".UniversityMainActivity"
            android:label="@string/title_activity_university_main"
            android:parentActivityName=".List_of_Vyzi_activity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ru.abityrienty.vyzi.List_of_Vyzi_activity" />
        </activity>
        <activity
            android:name=".Directions_list"
            android:label="@string/title_activity_directions_list"
            android:parentActivityName=".UniversityMainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ru.abityrienty.vyzi.UniversityMainActivity" />
        </activity>
        <activity
            android:name=".InstitutePage"
            android:label="@string/title_activity_institute_page"
            android:parentActivityName=".Directions_list"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ru.abityrienty.vyzi.Directions_list" />
        </activity>
        <activity
            android:name=".Preferences"
            android:label="@string/title_activity_preferences"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ru.abityrienty.vyzi.MainActivity" />
        </activity>
    </application>

</manifest>