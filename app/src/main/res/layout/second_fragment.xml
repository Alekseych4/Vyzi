<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:fbutton="http://schemas.android.com/apk/res-auto">

    <HorizontalScrollView
        android:id="@+id/hor_scroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_1"
                style="@style/small_picture"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@null"
                android:onClick="openUniversityMainActivity"
                android:src="@mipmap/kfu" />

            <ImageButton
                android:id="@+id/btn_2"
                style="@style/small_picture"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@null"
                android:onClick="openUniversityMainActivity"
                android:src="@mipmap/kai" />

            <ImageButton
                android:id="@+id/btn_3"
                style="@style/small_picture"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@null"
                android:onClick="openUniversityMainActivity"
                android:src="@mipmap/logo_knitu" />

            <ImageButton
                android:id="@+id/btn_4"
                style="@style/small_picture"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@null"
                android:onClick="openUniversityMainActivity"
                fbutton:srcCompat="@mipmap/kgmu" />

            <ImageButton
                android:id="@+id/btn_5"
                style="@style/small_picture"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@null"
                android:onClick="openUniversityMainActivity"
                fbutton:srcCompat="@mipmap/kgeu_logo" />

            <ImageButton
                android:id="@+id/btn_6"
                style="@style/small_picture"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@null"
                android:onClick="openUniversityMainActivity"
                fbutton:srcCompat="@mipmap/kgasu_logo" />

            <ImageButton
                android:id="@+id/btn_7"
                style="@style/small_picture"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@null"
                android:onClick="openUniversityMainActivity"
                fbutton:srcCompat="@mipmap/kiu_logo" />

            <ImageButton
                android:id="@+id/btn_8"
                style="@style/small_picture"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@null"
                android:onClick="openUniversityMainActivity"
                fbutton:srcCompat="@mipmap/kazgik_logo" />


        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>