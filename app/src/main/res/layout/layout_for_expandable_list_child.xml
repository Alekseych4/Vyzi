<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">
    <TextView
        android:id="@+id/item_of_child_of_expandable_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                style="@style/table_header"
                android:text="Предметы для сдачи:"/>
            <TextView
                style="@style/table_header"
                android:text="Минимальный проходной балл:"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/first_subject"
                style="@style/subject_name"/>
            <TextView
                android:id="@+id/first_point"
                style="@style/points"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/second_subject"
                style="@style/subject_name"/>
            <TextView
                android:id="@+id/second_point"
                style="@style/points"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/third_subject"
                style="@style/subject_name"/>
            <TextView
                android:id="@+id/third_point"
                style="@style/points"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                style="@style/table_header"
                android:text="Средний балл прошлого года для поступления на бюджет:"/>
            <TextView
                style="@style/table_header"
                android:text="Средний балл прошлого года для поступления на контракт:"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/min_budget"
                style="@style/subject_name"
                android:layout_weight="1.0"/>
            <TextView
                android:id="@+id/min_contract"
                style="@style/points"
                android:layout_weight="1.0"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>